// apps/backend/prisma-platform/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/platform-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PLATFORM")
}

model Tenant {
  id          Int     @id @default(autoincrement())
  code        String  @unique
  name        String
  databaseUrl String
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
