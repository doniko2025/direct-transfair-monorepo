{
  "name": "direct-transfair-backend",
  "private": true,
  "version": "0.1.0",
  "description": "DirectTransfâ€™air backend (NestJS)",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev:watch": "tsx watch -r tsconfig-paths/register src/main.ts",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "pnpm run clean && nest build -p tsconfig.build.json",
    "start": "node dist/main.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "prisma db seed",
    "prisma:platform:generate": "prisma generate --schema prisma-platform/schema.prisma",
    "prisma:platform:migrate": "prisma migrate dev --schema prisma-platform/schema.prisma",
    "prisma:platform:deploy": "prisma migrate deploy --schema prisma-platform/schema.prisma"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^11.2.3",
    "@prisma/client": "5.22.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "express": "^4.19.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.10",
    "@types/swagger-ui-express": "^4.1.8",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  }
}
