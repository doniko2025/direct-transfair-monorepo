{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/ui/*"],
      "@config/*": ["packages/config/*"],
      "@utils/*": ["packages/utils/*"]
    }
  }
}
